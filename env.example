# Required API Keys
GOOGLE_API_KEY=your-google-api-key-here
CSE_API_KEY=your-google-custom-search-key
CSE_ID=your-custom-search-engine-id

# URLs (base URLs for services)
QUESTION_DATA_URL=https://your-question-data-url.json
QUIZMASTER_URL=http://localhost:8080
TUTOR_URL=http://localhost:7070
UI_URL=0.0.0.0

# Ports for local dev
QUIZMASTER_PORT=8080
TUTOR_PORT=7070
UI_PORT=7860

# Models
QUIZMASTER_MODEL=gemini-2.5-flash-lite
TUTOR_MODEL=gemini-2.5-flash
SUBJECT_CLASSIFIER_MODEL=gemini-2.5-flash
INTENT_CLASSIFIER_MODEL=gemini-2.5-flash

# Classifier compaction config
SUBJECT_CLASSIFIER_COMPACTION_INTERVAL=5
SUBJECT_CLASSIFIER_OVERLAP_SIZE=1
INTENT_CLASSIFIER_COMPACTION_INTERVAL=5
INTENT_CLASSIFIER_OVERLAP_SIZE=1

# Misc
TEST_TOKEN=change-me
ADK_DEBUG=1
MEMORY_DIR=/tmp/tutor_memory
RETRY_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0

# Firestore (optional)
FIRESTORE_CREDENTIALS_JSON=PASTE_YOUR_JSON_IF_NEEDED

